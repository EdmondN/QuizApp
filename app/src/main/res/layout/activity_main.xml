<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/athens"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            style="@style/QuestionFont"
            android:text="@string/_1_what_is_the_capital_city_of_greece" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/marginBottom17"
            android:layout_marginTop="@dimen/marginTop55">

            <RadioButton
                android:id="@+id/radio1"
                style="@style/AnswerFont"
                android:onClick="onRadioButtonClickedQ1"
                android:text="@string/patra" />

            <RadioButton
                android:id="@+id/radio2"
                style="@style/AnswerFont"
                android:onClick="onRadioButtonClickedQ1"
                android:text="@string/thessaloniki" />

            <RadioButton
                android:id="@+id/radio3"
                style="@style/AnswerFont"
                android:onClick="onRadioButtonClickedQ1"
                android:text="@string/athens" />

            <RadioButton
                android:id="@+id/radio4"
                style="@style/AnswerFont"
                android:onClick="onRadioButtonClickedQ1"
                android:text="@string/nafplio" />
        </RadioGroup>


        <TextView
            android:id="@+id/textView2"
            style="@style/QuestionFont"
            android:text="@string/_2_which_are_the_largest_islands_of_greece" />

        <CheckBox
            android:id="@+id/checkboxa1"
            style="@style/AnswerFont"
            android:layout_marginTop="@dimen/marginTop55"
            android:text="@string/kefalonia" />

        <CheckBox
            android:id="@+id/checkboxa2"
            style="@style/AnswerFont"
            android:text="@string/crete" />

        <CheckBox
            android:id="@+id/checkboxa3"
            style="@style/AnswerFont"
            android:text="@string/euboea" />

        <CheckBox
            android:id="@+id/checkboxa4"
            style="@style/AnswerFont"
            android:text="@string/mykonos" />

        <TextView
            android:id="@+id/textView3"
            style="@style/QuestionFont"
            android:text="@string/_3_the_first_and_last_letter" />

        <CheckBox
            android:id="@+id/checkboxb1"
            style="@style/AnswerFont"
            android:layout_marginTop="@dimen/marginTop55"
            android:text="@string/alfa" />

        <CheckBox
            android:id="@+id/checkboxb2"
            style="@style/AnswerFont"
            android:text="@string/gamma" />

        <CheckBox
            android:id="@+id/checkboxb3"
            style="@style/AnswerFont"
            android:text="@string/omega" />

        <CheckBox
            android:id="@+id/checkboxb4"
            style="@style/AnswerFont"
            android:text="@string/epsilon" />

        <TextView
            android:id="@+id/textView4"
            style="@style/QuestionFont"
            android:text="@string/_4_what_is_the_goddess_of_love_and_beauty" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/marginBottom17"
            android:layout_marginTop="@dimen/marginTop55">

            <RadioButton
                android:id="@+id/radiob1"
                style="@style/AnswerFont"
                android:onClick="onRadioButtonClickedQ2"
                android:text="@string/artemis" />

            <RadioButton
                android:id="@+id/radiob2"
                style="@style/AnswerFont"
                android:onClick="onRadioButtonClickedQ2"
                android:text="@string/hera" />

            <RadioButton
                android:id="@+id/radiob3"
                style="@style/AnswerFont"
                android:onClick="onRadioButtonClickedQ2"
                android:text="@string/athena" />

            <RadioButton
                android:id="@+id/radiob4"
                style="@style/AnswerFont"
                android:onClick="onRadioButtonClickedQ2"
                android:text="@string/aphrodite" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView5"
            style="@style/QuestionFont"
            android:text="@string/_5_what_is_the_king_of_gods_in_greek_mythology" />

        <EditText
            android:id="@+id/edittext1"
            style="@style/AnswerFontEdit" />

        <TextView
            android:id="@+id/textView6"
            style="@style/QuestionFont"
            android:text="@string/_6_what_is_the_first_capital_of_greece" />

        <EditText
            android:id="@+id/edittext2"
            style="@style/AnswerFontEdit" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--Submit-Reset Buttons. -->
            <Button
                android:id="@+id/btnDisplay"
                style="@style/Button"
                android:layout_width="wrap_content"
                android:onClick="onSubmit"
                android:text="@string/submit_answer" />

            <Button
                android:id="@+id/buttonrReset"
                style="@style/Button"
                android:layout_width="match_parent"
                android:onClick="onClear"
                android:text="@string/reset" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>
